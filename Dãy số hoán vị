#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#include <set>
using namespace std;

int main() {
    int N;
    cin >> N;              
    set<int> s;               
    // Đọc N số và đưa vào set
    for (int i = 0, x; i < N; i++) {
        cin >> x;
        s.insert(x);
    }

    // Điều kiện "YES":
    // 1. Không có phần tử trùng (set.size() == N)
    // 2. Phần tử nhỏ nhất phải là 1 (*s.begin() == 1)
    // 3. Phần tử lớn nhất phải là N (*s.rbegin() == N)
    if ((int)s.size() == N && *s.begin() == 1 && *s.rbegin() == N)
        cout << "YES";
    else
        cout << "NO";

    return 0;
}
