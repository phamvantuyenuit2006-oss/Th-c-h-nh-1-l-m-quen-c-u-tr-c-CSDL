#include <bits/stdc++.h>
using namespace std;
using ll = long long;
const ll INF = 1e18;

struct DijkstraResult {
    vector<ll> dist;
    vector<int> parent;
};

DijkstraResult dijkstra(int n, int start, const vector<vector<pair<int,int>>> &graph) {
    vector<ll> dist(n + 1, INF);
    vector<int> parent(n + 1, -1);
    priority_queue<pair<ll,int>, vector<pair<ll,int>>, greater<pair<ll,int>>> pq;

    dist[start] = 0;
    pq.push({0, start});

    while (!pq.empty()) {
        auto [du, u] = pq.top(); pq.pop();
        if (du != dist[u]) continue;
        for (auto [v, w] : graph[u]) {
            if (dist[v] > dist[u] + w) {
                dist[v] = dist[u] + w;
                parent[v] = u;
                pq.push({dist[v], v});
            }
        }
    }
    return {dist, parent};
}
vector<int> reconstruct_path(int s, int t, const vector<int> &parent) {
    vector<int> path;
    int cur = t;
    while (cur != -1) {
        path.push_back(cur);
        if (cur == s) break;
        cur = parent[cur];
    }
    reverse(path.begin(), path.end());
    if (path.front() != s) path.clear(); 
    return path;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n, m;
    int s, t, x;
    cin >> n >> m >> s >> t >> x;

    vector<vector<pair<int,int>>> graph(n + 1);
    for (int i = 0; i < m; i++) {
        int u, v, w;
        cin >> u >> v >> w;
        graph[u].push_back({v, w});
    }
    auto res1 = dijkstra(n, s, graph);
    auto res2 = dijkstra(n, x, graph);

    if (res1.dist[x] == INF || res2.dist[t] == INF) {
        cout << -1 << "\n";
        return 0;
    }

    ll total = res1.dist[x] + res2.dist[t];
    vector<int> path1 = reconstruct_path(s, x, res1.parent);
    vector<int> path2 = reconstruct_path(x, t, res2.parent);
    vector<int> fullPath = path1;
    for (int i = 1; i < (int)path2.size(); i++)
        fullPath.push_back(path2[i]);

    cout << fullPath.size() << " " << total << "\n";
    for (size_t i = 0; i < fullPath.size(); i++) {
        if (i) cout << " ";
        cout << fullPath[i];
    }
    cout << "\n";
    return 0;
}
